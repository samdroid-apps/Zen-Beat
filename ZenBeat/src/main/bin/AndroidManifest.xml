<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.game.zen.beat"
    android:versionCode="2"
    android:versionName="1.0A" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name="MenuActivity" android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name="GameActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="StartVideo" android:screenOrientation="landscape"></activity>
        <activity android:name="HowToActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="SettingsActivity" android:screenOrientation="portrait"></activity>
        <activity android:screenOrientation="portrait" android:name="DragonVideo"></activity>
        <activity android:screenOrientation="portrait" android:name="EndVideo"></activity>
    </application>

</manifest>
